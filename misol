  <script>
        let allApplications = [];
        let allResults = [];
        let currentApplication = null;
        let selectedImages = [];

        const API_BASE = 'http://127.0.0.1:8000/api/v1/';

        // Get JWT token from localStorage
        function getAuthToken() {
            return localStorage.getItem('access_token');
        }

        // Create headers with JWT token
        function getAuthHeaders(includeContentType = true) {
            const headers = {
                'Authorization': `Bearer ${getAuthToken()}`
            };
            if (includeContentType) {
                headers['Content-Type'] = 'application/json';
            }
            return headers;
        }

        // Handle authentication errors
        function handleAuthError(error) {
            console.error('Authentication error:', error);
            localStorage.removeItem('access_token');
            localStorage.removeItem('user_role');
            localStorage.removeItem('user_name');
            alert('Tizimga kirish muddati tugagan. Iltimos, qayta kiring.');
            window.location.href = '/frontend/login.html';
        }

        // Logout function
        function logout() {

                localStorage.removeItem('access_token');
                localStorage.removeItem('user_role');
                localStorage.removeItem('user_name');
                showToast('Tizimdan muvaffaqiyatli chiqdingiz', 'success');
                setTimeout(() => {
                    window.location.href = 'index.html';
                }, 1000);

        }

        // Display user info
        function displayUserInfo() {
            const userName = localStorage.getItem('user_name');
            if (userName) {
                document.getElementById('userName').textContent = userName;
            }
        }

        // Status translations
        const statusTranslations = {
            'NEW': 'Yangi',
            'ASSIGNED': 'Tayinlangan',
            'ACCEPTED': 'Qabul qilindi',
            'DONE': 'Tugatildi',
            'REJECTED': 'Rad etildi'
        };

        // Show toast notification
        function showToast(message, type = 'success') {
            const toast = document.getElementById('toast');
            toast.className = `toast toast-${type}`;
            toast.innerHTML = `
                <div class="toast-icon">${type === 'success' ? '‚úÖ' : '‚ùå'}</div>
                <div class="toast-message">${message}</div>
            `;
            toast.classList.add('show');
            setTimeout(() => toast.classList.remove('show'), 3000);
        }

        // Format date
        function formatDate(dateString) {
            if (!dateString) return 'Sana ko\'rsatilmagan';
            const date = new Date(dateString);
            return date.toLocaleDateString('uz-UZ', {
                day: '2-digit',
                month: 'long',
                year: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            });
        }

        // Load applications
        async function loadApplications() {
            try {
                const response = await fetch(`${API_BASE}executor/applications/`, {
                    headers: getAuthHeaders()
                });

                if (response.status === 401 || response.status === 403) {
                    handleAuthError(new Error('Unauthorized'));
                    return;
                }

                if (!response.ok) throw new Error('Ma\'lumotlarni yuklashda xatolik');

                const data = await response.json();
                allApplications = data;

                updateCounts();
                renderApplications();
            } catch (error) {
                console.error('Error loading applications:', error);
                showToast('Murojatlarni yuklashda xatolik yuz berdi', 'error');
            } finally {
                document.getElementById('applicationsLoading').style.display = 'none';
            }
        }

        // Load results
        async function loadResults() {
            try {
                document.getElementById('resultsLoading').style.display = 'block';
                const response = await fetch(`${API_BASE}results/`, {
                    headers: getAuthHeaders()
                });

                if (response.status === 401 || response.status === 403) {
                    handleAuthError(new Error('Unauthorized'));
                    return;
                }

                if (!response.ok) throw new Error('Natijalarni yuklashda xatolik');

                const data = await response.json();
                allResults = data;

                document.getElementById('countResults').textContent = data.length;
                renderResults();
            } catch (error) {
                console.error('Error loading results:', error);
                showToast('Natijalarni yuklashda xatolik yuz berdi', 'error');
            } finally {
                document.getElementById('resultsLoading').style.display = 'none';
            }
        }

        // Update counts
        function updateCounts() {
            const newApps = allApplications.filter(app =>
                ['NEW', 'ASSIGNED'].includes(app.status)
            ).length;
            const accepted = allApplications.filter(app => app.status === 'ACCEPTED').length;
            const completed = allApplications.filter(app => app.status === 'DONE').length;

            document.getElementById('countAll').textContent = allApplications.length;
            document.getElementById('countNew').textContent = newApps;
            document.getElementById('countAccepted').textContent = accepted;
            document.getElementById('countCompleted').textContent = completed;
        }

        // Render applications
        function renderApplications() {
            const allApps = allApplications;
            const newApps = allApplications.filter(app =>
                ['NEW', 'ASSIGNED'].includes(app.status)
            );
            const acceptedApps = allApplications.filter(app => app.status === 'ACCEPTED');
            const completedApps = allApplications.filter(app => app.status === 'DONE');

            document.getElementById('applicationsGrid').innerHTML =
                allApps.length ? allApps.map(createAppCard).join('') :
                '<div class="empty-state"><div class="empty-icon">üì≠</div><div class="empty-title">Murojatlar yo\'q</div></div>';

            document.getElementById('newGrid').innerHTML =
                newApps.length ? newApps.map(createAppCard).join('') :
                '<div class="empty-state"><div class="empty-icon">üì≠</div><div class="empty-title">Yangi murojatlar yo\'q</div></div>';

            document.getElementById('acceptedGrid').innerHTML =
                acceptedApps.length ? acceptedApps.map(createAppCard).join('') :
                '<div class="empty-state"><div class="empty-icon">üì≠</div><div class="empty-title">Qabul qilingan murojatlar yo\'q</div></div>';

            document.getElementById('completedGrid').innerHTML =
                completedApps.length ? completedApps.map(createAppCard).join('') :
                '<div class="empty-state"><div class="empty-icon">üì≠</div><div class="empty-title">Tugatilgan murojatlar yo\'q</div></div>';
        }

        // Create application card
        function createAppCard(app) {
            const statusClass = app.status.toLowerCase();
            const statusText = statusTranslations[app.status] || app.status;

            return `
                <div class="app-card" onclick="viewApplication(${app.id})">
                    <div class="app-card-header">
                        <div class="app-status status-${statusClass}">
                            ${getStatusIcon(app.status)} ${statusText}
                        </div>
                        <div class="app-name">${app.fullname}</div>
                        <div class="app-date">üìÖ ${formatDate(app.created_at)}</div>
                    </div>
                    <div class="app-card-body">
                        <div class="app-location">
                            <div class="location-item">
                                <div class="location-icon">üìç</div>
                                <div class="location-text">
                                    <div class="location-label">Hudud</div>
                                    <div class="location-value">${app.region_name || 'Ko\'rsatilmagan'}</div>
                                </div>
                            </div>
                            ${app.district_name ? `
                                <div class="location-item">
                                    <div class="location-icon">üèòÔ∏è</div>
                                    <div class="location-text">
                                        <div class="location-label">Tuman</div>
                                        <div class="location-value">${app.district_name}</div>
                                    </div>
                                </div>
                            ` : ''}
                        </div>
                        ${app.description ? `
                            <div class="app-description">${app.description}</div>
                        ` : ''}
                    </div>
                </div>
            `;
        }

        // Get status icon
        function getStatusIcon(status) {
            const icons = {
                'NEW': 'üÜï',
                'ASSIGNED': 'üìå',
                'ACCEPTED': 'üëÅÔ∏è',
                'DONE': '‚úÖ',
                'REJECTED': '‚ùå'
            };
            return icons[status] || 'üìã';
        }

        // View application
        async function viewApplication(appId) {
            const app = allApplications.find(a => a.id === appId);
            if (!app) return;

            currentApplication = app;

            const modalBody = document.getElementById('modalBody');
            modalBody.innerHTML = `
                <div class="detail-section">
                    <div class="detail-title">Umumiy ma'lumotlar</div>
                    <div class="detail-grid">
                        <div class="detail-item">
                            <div class="detail-item-label">To'liq ism</div>
                            <div class="detail-item-value">${app.fullname}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-item-label">Telefon</div>
                            <div class="detail-item-value">${app.phone}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-item-label">Status</div>
                            <div class="detail-item-value">${statusTranslations[app.status]}</div>
                        </div>
                        <div class="detail-item">
                            <div class="detail-item-label">Sana</div>
                            <div class="detail-item-value">${formatDate(app.created_at)}</div>
                        </div>
                    </div>
                </div>

                <div class="detail-section">
                    <div class="detail-title">Manzil</div>
                    <div class="detail-grid">
                        <div class="detail-item">
                            <div class="detail-item-label">Hudud</div>
                            <div class="detail-item-value">${app.region_name || 'Ko\'rsatilmagan'}</div>
                        </div>
                        ${app.district_name ? `
                            <div class="detail-item">
                                <div class="detail-item-label">Tuman</div>
                                <div class="detail-item-value">${app.district_name}</div>
                            </div>
                        ` : ''}
                    </div>
                </div>

                ${app.description ? `
                    <div class="detail-section">
                        <div class="detail-title">Tavsif</div>
                        <div class="detail-content">${app.description}</div>
                    </div>
                ` : ''}

                ${app.image ? `
                    <div class="detail-section">
                        <div class="detail-title">Rasm</div>
                        <img src="${app.image}" alt="Murojat rasmi" class="modal-image" onerror="this.style.display='none'">
                    </div>
                ` : ''}

                <div id="resultFormContainer"></div>
            `;

            const modalActions = document.getElementById('modalActions');
            modalActions.innerHTML = `
                <button class="btn btn-map" onclick="openLocation(${app.latitude}, ${app.longitude})">
                    üìç Lokatsiyani ko'rish
                </button>
                <button class="btn btn-telegram" onclick="shareToTelegram(${app.id})">
                    ‚úàÔ∏è Telegramga yuborish
                </button>
                ${app.status === 'ACCEPTED' ? `
                    <button class="btn btn-success" onclick="updateApplicationStatus(${app.id}, 'DONE')">
                        ‚úÖ Tugatildi deb belgilash
                    </button>
                ` : app.status !== 'DONE' ? `
                    <button class="btn btn-primary" onclick="updateApplicationStatus(${app.id}, 'ACCEPTED')">
                        üëÅÔ∏è Qabul qilish
                    </button>
                ` : ''}
                ${app.status !== 'DONE' ? `
                    <button class="btn btn-success" onclick="toggleResultForm()">
                        ‚ûï Natija yaratish
                    </button>
                ` : ''}
                <button class="btn btn-secondary" onclick="closeModal()">
                    Yopish
                </button>
            `;

            document.getElementById('appModal').classList.add('active');
        }

        // Toggle result form
        function toggleResultForm() {
            const container = document.getElementById('resultFormContainer');
            const existing = container.querySelector('.result-form');

            if (existing) {
                existing.remove();
                return;
            }

            container.innerHTML = `
                <div class="result-form active">
                    <h3 style="margin-bottom: 20px; color: #1e3a8a;">Natija yaratish</h3>
                    <form id="resultForm" onsubmit="submitResult(event)">
                        <div class="form-group">
                            <label class="form-label" for="resultDescription">Natija tavsifi *</label>
                            <textarea class="form-control" id="resultDescription" required
                                placeholder="Natija haqida batafsil ma'lumot kiriting..."></textarea>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Rasmlar (bir nechta tanlash mumkin)</label>
                            <div class="file-input-wrapper">
                                <label class="file-input-button">
                                    üì∏ Rasmlarni tanlang
                                    <input type="file" id="resultImages" multiple accept="image/*" onchange="previewImages(event)">
                                </label>
                            </div>
                            <div id="imagePreview" class="preview-images"></div>
                        </div>
                        <button type="submit" class="btn btn-success" style="width: 100%;">
                            ‚úÖ Natijani saqlash va tugatish
                        </button>
                    </form>
                </div>
            `;
        }

        // Preview images
        function previewImages(event) {
            selectedImages = Array.from(event.target.files);
            const previewContainer = document.getElementById('imagePreview');
            previewContainer.innerHTML = '';

            selectedImages.forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const div = document.createElement('div');
                    div.className = 'preview-image';
                    div.innerHTML = `
                        <img src="${e.target.result}" alt="Preview">
                        <button type="button" class="preview-image-remove" onclick="removeImage(${index})">√ó</button>
                    `;
                    previewContainer.appendChild(div);
                };
                reader.readAsDataURL(file);
            });
        }

        // Remove image
        function removeImage(index) {
            selectedImages.splice(index, 1);
            const dataTransfer = new DataTransfer();
            selectedImages.forEach(file => dataTransfer.items.add(file));
            document.getElementById('resultImages').files = dataTransfer.files;
            previewImages({ target: { files: dataTransfer.files } });
        }

        // Submit result
        async function submitResult(event) {
            event.preventDefault();

            const description = document.getElementById('resultDescription').value;

            if (!currentApplication) {
                showToast('Xatolik yuz berdi', 'error');
                return;
            }

            try {
                // Create result
                const resultData = {
                    applications: currentApplication.id,
                    description: description
                };

                const resultResponse = await fetch(`${API_BASE}result-images/`, {
                    method: 'POST',
                    headers: getAuthHeaders(),
                    body: JSON.stringify(resultData)
                });

                if (resultResponse.status === 401 || resultResponse.status === 403) {
                    handleAuthError(new Error('Unauthorized'));
                    return;
                }

                if (!resultResponse.ok) throw new Error('Natija yaratishda xatolik');

                const result = await resultResponse.json();

                // Upload images
                if (selectedImages.length > 0) {
                    for (const image of selectedImages) {
                        const formData = new FormData();
                        formData.append('result', result.id);
                        formData.append('image', image);

                        const uploadResponse = await fetch(`${API_BASE}result-images/`, {
                            method: 'POST',
                            headers: {
                                'Authorization': `Bearer ${getAuthToken()}`
                            },
                            body: formData
                        });

                        if (uploadResponse.status === 401 || uploadResponse.status === 403) {
                            handleAuthError(new Error('Unauthorized'));
                            return;
                        }
                    }
                }

                // Update application status to DONE
                await updateApplicationStatus(currentApplication.id, 'DONE');

                showToast('Natija muvaffaqiyatli saqlandi!', 'success');
                closeModal();
                loadApplications();
                loadResults();
            } catch (error) {
                console.error('Error submitting result:', error);
                showToast('Natijani saqlashda xatolik yuz berdi', 'error');
            }
        }

        // Update application status
        async function updateApplicationStatus(appId, status) {
            try {
                const response = await fetch(`${API_BASE}executor/applications/${appId}`, {
                    method: 'PATCH',
                    headers: getAuthHeaders(),
                    body: JSON.stringify({ status: status })
                });

                if (response.status === 401 || response.status === 403) {
                    handleAuthError(new Error('Unauthorized'));
                    return;
                }

                if (!response.ok) throw new Error('Status yangilashda xatolik');

                const updatedApp = await response.json();
                const index = allApplications.findIndex(a => a.id === appId);
                if (index !== -1) {
                    allApplications[index] = updatedApp;
                    updateCounts();
                    renderApplications();
                }

                if (currentApplication && currentApplication.id === appId) {
                    currentApplication = updatedApp;
                }

                const statusNames = {
                    'ACCEPTED': 'qabul qilindi',
                    'DONE': 'tugatildi'
                };
                showToast(`Murojat ${statusNames[status] || status}`, 'success');

                // Refresh modal if it's open
                if (document.getElementById('appModal').classList.contains('active')) {
                    closeModal();
                    setTimeout(() => viewApplication(appId), 300);
                }
            } catch (error) {
                console.error('Error updating status:', error);
                showToast('Status yangilashda xatolik yuz berdi', 'error');
            }
        }

        // Open location in Google Maps
        function openLocation(lat, lon) {
            if (!lat || !lon) {
                showToast('Lokatsiya ma\'lumotlari mavjud emas', 'error');
                return;
            }
            window.open(`https://www.google.com/maps?q=${lat},${lon}`, '_blank', 'noopener,noreferrer');
        }

        // Share to Telegram
        function shareToTelegram(appId) {
            const app = allApplications.find(a => a.id === appId);
            if (!app) {
                showToast('Murojat topilmadi', 'error');
                return;
            }

            // Create Google Maps location link
            const locationLink = `https://www.google.com/maps?q=${app.latitude},${app.longitude}`;

            // Prepare message text with proper encoding for Telegram
            let messageText = `üìã Yangi murojat%0A%0A`;
            messageText += `üë§ Ism: ${app.fullname}%0A`;
            messageText += `üìû Telefon: ${app.phone}%0A`;
            messageText += `üìç Hudud: ${app.region_name || 'Ko\'rsatilmagan'}%0A`;
            if (app.district_name) {
                messageText += `üèòÔ∏è Tuman: ${app.district_name}%0A`;
            }
            if (app.description) {
                messageText += `%0Aüìù Tavsif:%0A${encodeURIComponent(app.description)}%0A`;
            }
            messageText += `%0Aüìç Lokatsiya:%0A${locationLink}`;

            // Create Telegram URL that opens the app directly with pre-filled message
            const telegramUrl = `tg://msg?text=${messageText}`;

            // Try to open Telegram app directly
            window.location.href = telegramUrl;

            // Fallback to web version after a short delay if app doesn't open
            setTimeout(() => {
                const webTelegramUrl = `https://t.me/share/url?url=${encodeURIComponent(locationLink)}&text=${encodeURIComponent(messageText.replace(/%0A/g, '\n'))}`;
                window.open(webTelegramUrl, '_blank', 'noopener,noreferrer');
            }, 1000);
        }

        // Render results
        function renderResults() {
            const container = document.getElementById('resultsList');

            if (allResults.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-icon">üìä</div>
                        <div class="empty-title">Natijalar yo'q</div>
                        <div class="empty-text">Hali hech qanday natija yaratilmagan</div>
                    </div>
                `;
                return;
            }

            container.innerHTML = allResults.map(result => {
                const app = allApplications.find(a => a.id === result.applications);
                return `
                    <div class="result-card">
                        <div class="result-header">
                            <div class="result-app-info">
                                <div class="result-app-name">${app ? app.fullname : 'Noma\'lum'}</div>
                                <div class="result-date">üìÖ ${formatDate(result.created_at)}</div>
                            </div>
                        </div>
                        ${result.description ? `
                            <div class="result-description">
                                <strong>Natija:</strong> ${result.description}
                            </div>
                        ` : ''}
                        ${result.images && result.images.length > 0 ? `
                            <div class="result-images">
                                ${result.images.map(img => `
                                    <img src="${img.image}" alt="Natija rasmi" class="result-image"
                                        onclick="window.open('${img.image}', '_blank')" loading="lazy"
                                        onerror="this.style.display='none'">
                                `).join('')}
                            </div>
                        ` : ''}
                    </div>
                `;
            }).join('');
        }

        // Close modal
        function closeModal() {
            document.getElementById('appModal').classList.remove('active');
            currentApplication = null;
            selectedImages = [];
        }

        // Tab switching
        document.querySelectorAll('.tab-button').forEach(button => {
            button.addEventListener('click', () => {
                const tab = button.dataset.tab;

                document.querySelectorAll('.tab-button').forEach(b => b.classList.remove('active'));
                button.classList.add('active');

                document.querySelectorAll('.content-section').forEach(section => {
                    section.classList.remove('active');
                });

                if (tab === 'applications') {
                    document.getElementById('applicationsContent').classList.add('active');
                } else if (tab === 'new') {
                    document.getElementById('newContent').classList.add('active');
                } else if (tab === 'accepted') {
                    document.getElementById('acceptedContent').classList.add('active');
                } else if (tab === 'completed') {
                    document.getElementById('completedContent').classList.add('active');
                } else if (tab === 'results') {
                    document.getElementById('resultsContent').classList.add('active');
                    if (allResults.length === 0) loadResults();
                }
            });
        });

        // Close modal on outside click
        document.getElementById('appModal').addEventListener('click', (e) => {
            if (e.target.id === 'appModal') closeModal();
        });

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            // Display user information
            displayUserInfo();

            // Load data
            loadApplications();
        });
    </script>
